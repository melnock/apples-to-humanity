<h1><%= @game.name %></h1>
<br>

<% if flash[:notice] %>
<div class="notice warning">
  <% flash[:notice] %>
</div>
<% end %>


<div class="box">
  <div class="black_card ui"><%= @black_card.content %></div>
</div>

<h2>Leader of Round:</h2>
<h3><%= @leader.username %></h3>

<% if current_user.leader == true %>
<p class="warning">Refresh until you have cards for all players!</p>
  <%= form_tag game_round_results_path(@game, @round), method: "get" do%>

    <h4 class="ui horizontal divider header">
      <i class="heart icon"></i>
      Cards
    </h4>

      <% @choices.values.map{ |choice| Card.find(choice)}.each do |card| %>
      <div class="grid">
        <div class="game_card">
            <div class="ui toggle button radio">
              <div class="header content card">
                <%= card.content %>
              </div>
                <%= radio_button_tag :card_id, card.id %>
              </div>
          </div>
        <% end %>
      </div>
        <div class="ui">
          <%= submit_tag "Select Card", {class: 'ui button'}%> <br>
        </div>
    <% end %>
  </div>
<% else %>
<div class="game_card">
  <div class="ui toggle button">
    <% @choices.values.map{ |choice| Card.find(choice)}.map{|c| c.content}.each do |card| %>
    <div class="header content card">
      <%= card %>
    </div>
    <% end %>
  </div>
</div>


  <div class="ui button">
    <%= link_to "See Results!", game_round_results_path(@game, @round), method: "get" %>
  </div>

<% end %>
