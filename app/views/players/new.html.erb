<%if flash[:notice]  %>
  <div class="players-notice">
    <%= flash[:notice] %>
    </div>
<% end %>

<br>

<%= form_for @player do |f|%>
  <%= f.label :username %> <br>
  <%= f.text_field :username %> <br>
  <%= f.label :password %> <br>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %> <br>
  <%= f.password_field :password_confirmation %> <br><br>
  <%= f.submit %> <br>
<% end %>
